<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iwei.question.mapper.AppMapper">

    <resultMap id="AppResultMap" type="com.iwei.question.entity.App">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="app_name" property="appName" jdbcType="VARCHAR"/>
        <result column="agent_url" property="agentUrl" jdbcType="VARCHAR"/>
        <result column="agent_id" property="agentId" jdbcType="VARCHAR"/>
        <result column="agent_version" property="agentVersion" jdbcType="VARCHAR"/>
        <result column="agent_token" property="agentToken" jdbcType="VARCHAR"/>
        <result column="del_flg" property="delFlg" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, app_name, agent_url, agent_id, agent_version, agent_token, del_flg
    </sql>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="AppResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM app
        WHERE id = #{id,jdbcType=INTEGER} AND del_flg = 0
    </select>

    <insert id="insert" parameterType="com.iwei.question.entity.App" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO app
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="appName != null">
                app_name,
            </if>
            <if test="agentUrl != null">
                agent_url,
            </if>
            <if test="agentId != null">
                agent_id,
            </if>
            <if test="agentVersion != null">
                agent_version,
            </if>
            <if test="agentToken != null">
                agent_token,
            </if>
            del_flg
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="appName != null">
                #{appName,jdbcType=VARCHAR},
            </if>
            <if test="agentUrl != null">
                #{agentUrl,jdbcType=VARCHAR},
            </if>
            <if test="agentId != null">
                #{agentId,jdbcType=VARCHAR},
            </if>
            <if test="agentVersion != null">
                #{agentVersion,jdbcType=VARCHAR},
            </if>
            <if test="agentToken != null">
                #{agentToken,jdbcType=VARCHAR},
            </if>
            COALESCE(#{delFlg,jdbcType=INTEGER}, 0)
        </trim>
    </insert>

    <update id="updateById" parameterType="com.iwei.question.entity.App">
        UPDATE app
        <set>
            <if test="appName != null">
                app_name = #{appName,jdbcType=VARCHAR},
            </if>
            <if test="agentUrl != null">
                agent_url = #{agentUrl,jdbcType=VARCHAR},
            </if>
            <if test="agentId != null">
                agent_id = #{agentId,jdbcType=VARCHAR},
            </if>
            <if test="agentVersion != null">
                agent_version = #{agentVersion,jdbcType=VARCHAR},
            </if>
            <if test="agentToken != null">
                agent_token = #{agentToken,jdbcType=VARCHAR},
            </if>
            <if test="delFlg != null">
                del_flg = #{delFlg,jdbcType=INTEGER},
            </if>
        </set>
        WHERE id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteById" parameterType="java.lang.Integer">
        UPDATE app SET del_flg = 1
        WHERE id = #{id,jdbcType=INTEGER}
    </delete>

</mapper>